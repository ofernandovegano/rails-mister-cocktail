<h1>Esses são nossos bons drink</h1>

<%= link_to "Crie seu próprio cocktail", new_cocktail_path %>
<hr>
<div class = 'container'>
  <% @cocktails.each do |cocktail| %>
    <div class = 'card d-flex text-center'>
      <%= link_to cocktail_path(cocktail), class: 'index-img' do %>
      <%= cl_image_tag cocktail.photo.key, height: 200, width: 200, crop: :fill if cocktail.photo %>
      <p class = 'mt-3'><%=cocktail.name%></p>
      <%end%>
    </div>
  <% end %>
</div>